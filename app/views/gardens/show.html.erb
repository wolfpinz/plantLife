
<div class="container justify-content-around" style="width: 90%">

  <h1 class="align-middle"> <%= @garden.name %> </h1>
  <% @my_plants.each do |my_plant| %>
    <%= link_to garden_my_plant_path(my_plant.garden, my_plant), class: "text-decoration-none linked-plant-cards" do %>

      <div class="my-plant-card">
        <div class="d-flex justify-content-left">

          <%= cl_image_tag my_plant.photo.key, class: "plant-image-left", style:"width: 40%" %>

          <div class="p-2">
            <div class="lh-m">
              <% if my_plant.nickname.empty? %>
                <h2><%= my_plant.plant.latin %></h2>
              <% else %>
                <h2><%= my_plant.nickname %></h2>
              <% end %>

            <!-- <p class="my-plant-label">Light Exposure: <%= my_plant.plant.ideallight %></p> -->
              <p class="my-plant-label"><%= my_plant.plant.common %></p>
              <p class="my-plant-label">Last watered: <%= my_plant.days_ago %> days ago</p>


            </div>


          </div>
        </div>
      </div>
    <% end %>
  <% end %>
  <%= link_to garden_my_plants_path(@garden), class: "mx-2" do %>
    <button class="green-button mx-2 sticky-btn">
      +
    </button>
  <% end %>
</div>
