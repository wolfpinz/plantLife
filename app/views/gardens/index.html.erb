
<div class="container" style="width: 90%">

  <h1 class="my-4">
    My Gardens
  <h1>
  <div class="d-flex garden-meta-info">
    <div class="mr-3">
      <p class="analytics"><%= @garden_count %></p>
      <p class="light-gray">gardens</p>
    </div>
    <div class="ml-3">
      <p class="analytics"><%= @my_plants_count %></p>
      <p class="light-gray">plants</p>
    </div>
  </div>

  <% @gardens.each do |garden| %>
    <div class="my-5">
        <!-- Plant Images Carousel -->
        <div class="carousel">
            <% garden.my_plants.each do |p| %>
              <div class="my-plant-card-horizontal">
                <%= cl_image_tag p.photo.key, class: "plant-image" %>
                <% if p.nickname.empty? %>
                  <p><%= p.plant.common_name %></p>
                <% else %>
                  <p><%= p.nickname %></p>
                <% end %>
              </div>
            <% end %>
        </div>

        <!-- Garden Info -->
        <div class="d-flex justify-content-between">
          <div>
            <%= link_to garden_path(garden) do %>
            <h2><%= garden.name %></h2>
            <% end %>
            <p class="light-gray"><%= garden.my_plants.count %> plants</p>
          </div>
          <div class="flex-end">
            <% garden.my_plants.each do |p| %>
              <% if p.water? %>
                <% @count += 1 %>
              <% else %>
                <% @count += 0 %>
              <% end %>
            <% end %>

            <p class="to-do">
              <% if @count == 1 %>
                <%= @count %> to-do
              <% else %>
                <%= @count %> to-do's
              <% end %>
            </p>

          </div>
        </div>

    </div>
  <% end %>
  <button data-bs-toggle="modal" data-bs-target="#exampleModal" class="green-button mx-2 sticky-btn">
    +
  </button>
  <!-- Modal -->
  <div class="modal fade" id="exampleModal" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
    <div class="modal-dialog">
      <div class="modal-content">
        <div class="modal-header">
          <h5 class="modal-title" id="exampleModalLabel">Please enter your garden name:</h5>
          <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
        </div>
        <div class="modal-body">
          <%= simple_form_for @garden do |f|%>
            <%= f.input :name %>
            <%= f.button :submit, class:"btn btn-primary" %>
          <% end %>
      </div>
    </div>
  </div>
  </div>
</div>
