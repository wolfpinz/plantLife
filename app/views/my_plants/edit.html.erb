<h1><%= @my_plant.nickname %></h1>

<%= simple_form_for [@garden, @my_plant] do |f| %>
  <%= f.input :nickname %>
  <%= f.input :light_exposure %>
  <%= f.input :last_watered %>
  <%= f.input :photo, as: :file %>
  <%= hidden_field_tag "plant_id", params[:plant_id] %>
  <%= f.button :submit, "Edit Plant", class: "btn btn-primary"%>
<% end %>

