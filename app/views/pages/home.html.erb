
<%# button for adding a new garden (missing link) %>
<div class="d-flex justify-content-around">
  <h2 class=""> Add a new garden</h2>
  <button class="green-button">+</button>
</div>

<ul>
    <% @gardens.each do |garden| %>
      <li>
        <%= garden.name %>
      </li>
    <% end %>
  </li>
</ul>
<h2>Notifications</h2>
<% @my_plants.each do |p| %>
  <% if p.water? %>
    <div style="border: 1px solid black">
      <p><%= p.plant.common_name %> <%= p.nickname %></p>
      <p><%= p.garden.name %></p>
      <p><%= p.overdue %></p>
    </div>
  <% end %>
<% end %>
